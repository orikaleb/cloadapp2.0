generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Customer model
model Customer {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String   @unique
  phone           String?
  address         String?
  hashedPassword  String
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  orders          Order[]
  shoppingCart    ShoppingCart?
  
  @@map("customers")
}

// Category model with hierarchical structure
model Category {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  categoryName      String
  description       String?
  parentCategoryId  String?  @db.ObjectId
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Relations
  parentCategory    Category?  @relation("CategoryHierarchy", fields: [parentCategoryId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  subCategories     Category[] @relation("CategoryHierarchy")
  products          Product[]
  
  @@map("categories")
}

// Product model
model Product {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  sku            String   @unique
  productName    String
  brand          String?
  description    String?
  price          Float
  stockQuantity  Int      @default(0)
  categoryId     String   @db.ObjectId
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  // Relations
  category       Category     @relation(fields: [categoryId], references: [id])
  productImages  ProductImage[]
  orderItems     OrderItem[]
  cartItems      CartItem[]
  
  @@map("products")
}

// ProductImage model
model ProductImage {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  productId  String  @db.ObjectId
  imageUrl   String
  isPrimary  Boolean @default(false)
  
  // Relations
  product    Product @relation(fields: [productId], references: [id])
  
  @@map("product_images")
}

// Order model
model Order {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  customerId   String   @db.ObjectId
  orderDate    DateTime @default(now())
  status       String   @default("pending") // pending, confirmed, shipped, delivered, cancelled
  totalAmount  Float
  shippingFee  Float   @default(0)
  tax          Float   @default(0)
  discount     Float   @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relations
  customer     Customer    @relation(fields: [customerId], references: [id])
  orderItems   OrderItem[]
  payments     Payment[]
  sales        Sale[]
  shipments    Shipment[]
  
  @@map("orders")
}

// OrderItem model
model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String  @db.ObjectId
  productId String  @db.ObjectId
  quantity  Int
  subtotal  Float
  
  // Relations
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
  
  @@map("order_items")
}

// ShoppingCart model
model ShoppingCart {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  customerId  String   @unique @db.ObjectId
  sessionId   String?
  createdDate DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  customer    Customer  @relation(fields: [customerId], references: [id])
  cartItems   CartItem[]
  
  @@map("shopping_carts")
}

// CartItem model
model CartItem {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  cartId    String @db.ObjectId
  productId String @db.ObjectId
  quantity  Int
  
  // Relations
  cart      ShoppingCart @relation(fields: [cartId], references: [id])
  product   Product      @relation(fields: [productId], references: [id])
  
  @@map("cart_items")
}

// Payment model
model Payment {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId       String   @db.ObjectId
  paymentDate   DateTime @default(now())
  paymentMethod String   // credit_card, debit_card, paypal, bank_transfer, etc.
  transactionId String?
  currency      String   @default("GHS")
  amount        Float
  
  // Relations
  order         Order    @relation(fields: [orderId], references: [id])
  sales         Sale[]
  
  @@map("payments")
}

// Sale model
model Sale {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId     String   @db.ObjectId
  paymentId   String   @db.ObjectId
  saleDate    DateTime @default(now())
  totalAmount Float
  
  // Relations
  order       Order    @relation(fields: [orderId], references: [id])
  payment     Payment  @relation(fields: [paymentId], references: [id])
  
  @@map("sales")
}

// Shipment model
model Shipment {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId         String   @db.ObjectId
  shipmentDate    DateTime @default(now())
  deliveryAddress String
  carrier         String   // fedex, ups, dhl, etc.
  trackingNumber  String?
  status          String   @default("pending") // pending, shipped, in_transit, delivered
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  order           Order    @relation(fields: [orderId], references: [id])
  
  @@map("shipments")
}
